@model BankManagementSystemVersionFinal1.Models.Loan

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="LoanId" />

    <div class="form-group">
        <label asp-for="InterstRate" class="control-label">Interest Rate</label>
        <input asp-for="InterstRate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StartingDate" class="control-label">Starting Date</label>
        <input asp-for="StartingDate" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EndingDate" class="control-label">Ending Date</label>
        <input asp-for="EndingDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LoanStatus" class="control-label">Loan Status</label>
        <select asp-for="LoanStatus" class="form-control">
            <option value="Accepted">Accepted</option>
            <option value="Refused">Refused</option>
            <option value="AwaitingApproval">Awaiting Approval</option>
        </select>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" asp-route-id="@Model.LoanId">Back</a>
</div>
