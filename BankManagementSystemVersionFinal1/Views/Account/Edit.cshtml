@model BankManagementSystemVersionFinal1.Models.Account

<h2>Edit</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="AccountId" />
    <div class="form-group">
        <label asp-for="AccountStatus" class="control-label"></label>
        <select asp-for="AccountStatus" class="form-control">
            <option value="true">Active</option>
            <option value="false">Inactive</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-controller="Customers" asp-action="Details" asp-route-id="@ViewBag.CustomerId">Retour</a>
</div>
