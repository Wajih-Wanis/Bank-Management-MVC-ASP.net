@model BankManagementSystemVersionFinal1.Models.Account
@{
    ViewData["Title"] = "Create";
    var customerId = ViewBag.CustomerId;
}
<h2>Create Account</h2>

<form asp-action="Create">
            <input type="hidden" name="customerId" value="@customerId" />
    <div class="form-group">
        <label asp-for="Balance" class="control-label"></label>
        <input asp-for="Balance" class="form-control" />
        <span asp-validation-for="Balance" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Type of Account</label>
        <select name="TypeAccount" class="form-control">
            <option value="CheckingAccount">Checking Account</option>
            <option value="SavingAccount">Saving Account</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

