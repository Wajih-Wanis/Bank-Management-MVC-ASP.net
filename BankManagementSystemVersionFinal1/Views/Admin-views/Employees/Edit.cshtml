@model BankManagementSystemVersionFinal1.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="editEmployeePostHandler">
            <input type="hidden" asp-for="EmployeeId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mail" class="control-label"></label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <label for="BranchId">Branch</label>
                 <select id="BranchId" name="BranchId" asp-items="@ViewBag.BranchList" class="form-control"></select>
            </div>
            <div class="form-group">
                 <label for="DepartemntId">Departement</label>
                 <select id="DepartemntId" name="DepartemntId" asp-items="@ViewBag.DepartementList" class="form-control"></select>
            </div>
            <div class="form-group">
                <label for="Role">Role</label>
                <select id="Role" name="Role" class="form-control" disabled>
                 <option value="Agent">Agent</option>
                   <option value="Manager">Manager</option>
                </select>
            </div>
            <div class="form-group" style="margin-top : 20px">
                <input type="submit" value="Save" class="btn btn-primary" /> | <a asp-action="getEmployees" class="btn btn-dark">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
